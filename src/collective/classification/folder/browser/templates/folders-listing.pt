<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  metal:use-macro="context/main_template/macros/master"
  i18n:domain="collective.classification.folder">

<body>

  <metal:content-core fill-slot="content-core">

    <metal:block define-macro="content-core">
      <div tal:define="
        self nocall:context/@@folders-listing-view;
        folderContents folderContents | python:context.getFolderContents();
        Batch python:modules['Products.CMFPlone'].Batch;
        b_start python:request.get('b_start', 0);
        batch python:isinstance(folderContents, Batch) and folderContents or Batch(folderContents, 100, int(b_start), orphan=2);">

        <div metal:use-macro="context/batch_macros/macros/navigation" />

        <ul class="folder-list">
          <li tal:repeat="brain folderContents">
            <a tal:define="css_class python:brain.portal_type.replace(' ', '-')"
               tal:attributes="href brain/getURL;
                               class css_class"
               tal:content="brain/Title" />
          </li>
        </ul>

        <div metal:use-macro="context/batch_macros/macros/navigation" />

      </div>

    </metal:block>
  </metal:content-core>
</body>
</html>
